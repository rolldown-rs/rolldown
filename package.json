{
  "name": "rolldown",
  "version": "1.0.0",
  "description": "Rollup Rust implementation with 100% API compatible",
  "private": "true",
  "repository": "https://github.com/Brooooooklyn/rolldown",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "keywords": ["napi-rs", "NAPI", "N-API", "Rust", "node-addon", "node-addon-api"],
  "files": ["index.d.ts", "index.js"],
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "lerna run artifacts",
    "lint": "eslint . -c ./.eslintrc.yml \"packages/**/*.{ts,js}\"",
    "test": "ava",
    "format": "run-p format:md format:json format:yaml format:source",
    "format:md": "prettier --parser markdown --write \"./**/*.md\"",
    "format:json": "prettier --parser json --write \"./**/*.json\"",
    "format:source": "prettier --config ./package.json --write \"./**/*.{js,ts}\"",
    "format:yaml": "prettier --parser yaml --write \"./**/*.{yml,yaml}\"",
    "typecheck": "tsc -b tsconfig.project.json -verbose",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.1.0",
    "@swc-node/register": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "ava": "^3.15.0",
    "benny": "^3.6.15",
    "chalk": "^4.1.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sonarjs": "^0.9.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@node-rs/helper": "^1.2.0"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": ["prettier --write", "eslint -c .eslintrc.yml --fix"],
    "*.@(yml|yaml)": ["prettier --parser yaml --write"],
    "*.md": ["prettier --parser markdown --write"],
    "*.json": ["prettier --parser json --write"]
  },
  "ava": {
    "require": ["@swc-node/register"],
    "extensions": ["ts"],
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tsconfig.json"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always",
    "parser": "typescript"
  }
}
